<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFE95D"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/imgMenuCart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"
            android:src="@drawable/geprek_ijo" />

        <!-- Nama menu -->
        <TextView
            android:id="@+id/txtNamaMenuCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ayam geprek"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgMenuCart"
            app:layout_constraintTop_toTopOf="@id/imgMenuCart"
            app:layout_constraintEnd_toStartOf="@+id/layoutCounter" />

        <!-- Harga -->
        <TextView
            android:id="@+id/txtHargaCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RP 10.000"
            android:textSize="12sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/txtNamaMenuCart"
            app:layout_constraintTop_toBottomOf="@id/txtNamaMenuCart" />

        <!-- Counter (+ -) -->
        <LinearLayout
            android:id="@+id/layoutCounter"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_counter"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtQty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>