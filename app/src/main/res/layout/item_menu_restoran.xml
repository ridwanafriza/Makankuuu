<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_8" />

    <TextView
        android:id="@+id/txtNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayam Geprek Sambal Ijo"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/txtDeskripsiMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayam geprek + nasi + sambal ijo"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 16.000"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDiskonItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:padding="3dp"
            android:background="@drawable/bg_diskon"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Mau"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white" />

</LinearLayout>
