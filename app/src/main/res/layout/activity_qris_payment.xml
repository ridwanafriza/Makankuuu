<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainQris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txtHeaderQris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembayaran QRIS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="20dp" />

    <ImageView
        android:id="@+id/imgQris"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_qris_placeholder"
        android:contentDescription="QR Code" />

    <TextView
        android:id="@+id/txtTotalQris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: Rp 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btnBayarQris"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Bayar via QRIS"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>