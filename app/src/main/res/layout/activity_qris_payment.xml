<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainQris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txtHeaderQris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingBottom="20dp"
        android:text="Pembayaran QRIS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgQris"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgQris"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgQris"
        android:layout_width="331dp"
        android:layout_height="267dp"
        android:contentDescription="QR Code"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_qris_placeholder"
        app:layout_constraintBottom_toTopOf="@id/txtTotalQris"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHeaderQris"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/txtTotalQris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Total: Rp 0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgQris"
        app:layout_constraintTop_toBottomOf="@id/imgQris" />

    <Button
        android:id="@+id/btnBayarQris"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:text="Bayar via QRIS"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtTotalQris"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTotalQris" />

</androidx.constraintlayout.widget.ConstraintLayout>
