<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih -->
    <solid android:color="#FFFFFF" />

    <!-- Outline hijau -->
    <stroke
        android:width="2dp"
        android:color="#66BB6A" />

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>